<style is:global>
    /* Fonts */
    /* https://cdnfonts.com */
    @import url("https://fonts.cdnfonts.com/css/sofia-pro");

    /* Icons */
    /* https://icon-sets.iconify.design/quill/ */
    /* e.g., <Icon name="filename" /> */

    /* Page Transition */
    @view-transition {
        navigation: auto;
    }
    @keyframes blur-out {
        from {
            filter: blur(0);
        }
        to {
            filter: blur(10px);
        }
    }
    @keyframes blur-in {
        from {
            filter: blur(10px);
        }
        to {
            filter: blur(0);
        }
    }
    ::view-transition-old(root) {
        animation: 0.2s ease-in both blur-out;
    }
    ::view-transition-new(root) {
        animation: 0.2s ease-in both blur-in;
    }

    /* Global styles */
    :root {
        --accent: 117, 127, 154;
        --accent-light: 215, 221, 232;
        --accent-dark: 80, 85, 99;
        --accent-gradient: linear-gradient(
            20deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)),
            white 40%
        );
        --background--dark: #1b1c1d;
        transition: opacity 3s ease-in-out;
    }
    body {
        font-family: "Sofia Pro", Tahoma, Arial, sans-serif;
        background: var(--background--dark);
        color: #fffff0;
        margin: 0;
        width: 100vw;
        height: 100vh;
    }
    h1,
    h2,
    h3,
    h4,
    h5 {
        font-weight: 200;
        letter-spacing: 0.2em;
        padding-top: 0.3rem;
        padding-bottom: 0.3rem;
    }
    p {
        font-weight: 200;
        letter-spacing: 0.1em;
    }
    .container {
        width: 100%;
        height: calc(100vh - 6rem);
    }
    .full-height {
        height: 100%;
    }
    .flex-col-center {
        display: flex;
        flex-direction: column; /* Arrange items in a column */
        align-items: center; /* Center items horizontally */
        justify-content: center; /* Center items vertically */
    }
    .flex-row-center {
        display: flex;
        flex-direction: row; /* Arrange items in a row */
        align-items: center; /* Center items vertically */
        justify-content: center; /* Center items horizontally */
    }
</style>
