---
// Design reference: https://sarthikg.com/

interface Props {
    title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    /* https://cdnfonts.com */
    @import url("https://fonts.cdnfonts.com/css/merliha");
    @import url("https://fonts.cdnfonts.com/css/sofia-pro");

    :root {
        --accent: 117, 127, 154;
        --accent-light: 215, 221, 232;
        --accent-dark: 80, 85, 99;
        --accent-gradient: linear-gradient(
            20deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)),
            white 40%
        );
    }
    html {
        font-family: "Sofia Pro", Tahoma, Arial, sans-serif;
        font-weight: 200;
        background: #1b1c1d;
        color: #fffff0;
        margin: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        display: flex;
        flex-direction: row;
		align-items:center;
        justify-content: center;
    }
    h1,
    h2,
    h3,
    h4,
    h5 {
        font-family: "Merliha", Garamond, Georgia, serif;
        letter-spacing: 0.2em;
    }
    .flex-col-container {
        display: flex;
        flex-direction: column; /* or column, row-reverse, column-reverse */
		align-items:center;
    }
	.flex-row-container {
		display: flex;
        flex-direction: row; /* or column, row-reverse, column-reverse */
		align-items:center;
	}
</style>
