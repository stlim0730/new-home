---
import Layout from "../layouts/Layout.astro";
import NameCard from "../components/NameCard.astro";
---

<Layout title="Seongtaek Lim's Portfolio">
    <main class="flex-col-container">
		<NameCard name="Seongtaek Lim"
			src="/assets/images/profile/profile-temp.jpg" />
    </main>
</Layout>

<style>
    main {
		width: auto;
    }
    .instructions {
        margin-bottom: 2rem;
        border: 1px solid rgba(var(--accent-light), 25%);
        background: linear-gradient(
            rgba(var(--accent-dark), 66%),
            rgba(var(--accent-dark), 33%)
        );
        padding: 1.5rem;
        border-radius: 8px;
    }
    .instructions code {
        font-size: 0.8em;
        font-weight: bold;
        background: rgba(var(--accent-light), 12%);
        color: rgb(var(--accent-light));
        border-radius: 4px;
        padding: 0.3em 0.4em;
    }
    .instructions strong {
        color: rgb(var(--accent-light));
    }
    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 2rem;
        padding: 0;
    }

    @media (max-width: 1024px) {
        main {
            width: 100vw;
        }
    }
</style>
