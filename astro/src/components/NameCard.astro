---
import * as leadTextSrc from "../content/lead/lead.md";

const { name, src } = Astro.props;

const leadTexts = leadTextSrc.rawContent().trim().split("\n");

const getRandomLeadText = () => {
    const index = Math.floor(Math.random() * leadTexts.length);
    return leadTexts[index];
};
---

<div class="name-card flex-row-container">
    <div class="name-card-text-set">
        <h1 class="text-gradient">{name}</h1>
        <div class="lead-text">
            <p>{getRandomLeadText()}</p>
        </div>
    </div>
    <div class="flex-item">
        <img class="profile-photo" src={src} />
    </div>
</div>

<style>
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 300%;
        background-position: 0%;
    }
    .name-card {
        width: 600px;
        justify-content: space-between;
    }
    .name-card-text-set {
        width: 400px;
    }
    .lead-text {
        line-height: 2em;
    }
    .profile-photo {
        height: 8rem;
        border-radius: 50%;
        padding: 1px;
        background-image: linear-gradient(
            340deg,
            rgb(var(--accent)),
            rgb(var(--accent-light))
        );
        object-fit: cover;
    }

    @media (max-width: 1024px) {
        p {
            font-size: 1.3rem;
        }

        .name-card {
            width: 100%;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }

        .name-card-text-set {
            text-align: center;
            width: auto;
        }

        .profile-photo {
            width: 8rem;
            height: 8rem;
        }

        .lead-text {
            font-size: 0.9rem;
            line-height: 1.6em;
        }
    }

    @media (max-width: 480px) {
        h1,
        h2,
        h3,
        h4,
        h5 {
            font-size: 1.3rem;
        }

        p {
            font-size: 1rem;
        }

        .profile-photo {
            width: 6rem;
            height: 6rem;
        }
    }
</style>
