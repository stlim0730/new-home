---
interface Props {
  items: Array<{
    data: {
      title: string;
      description: string;
      order?: number;
      featuredImages?: string[];
    };
  }>;
}

const { items } = Astro.props;
const sortedItems = items.sort((a, b) => (a.data.order ?? 999) - (b.data.order ?? 999));
---

<div class="photography-list">
  {
    sortedItems.map((item) => {
      const images = item.data.featuredImages || [];
      const randomImage = images.length > 0
        ? images[Math.floor(Math.random() * images.length)]
        : '/assets/images/photography/placeholder.jpg';

      return (
        <div class="list-item">
          <a
            class="photography-card"
            href={`/photography/${item.data.title}`}
            style={`background-image: url(${randomImage});`}
          >
            <div class="card-content">
              <h3 class="title-case">
                {item.data.title}
              </h3>
            </div>
          </a>
        </div>
      );
    })
  }
</div>

<style>
  .photography-list {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
  }

  .photography-card {
    width: 10vw;
    height: 60vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    border-radius: 4px;
    overflow: hidden;
    position: relative;
    text-decoration: none;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    transition: filter 0.3s ease-in-out;
    filter: grayscale(80%);
  }

  .photography-card:hover {
    filter: grayscale(0%);
  }

  .card-content {
    position: relative;
    z-index: 2;
    width: 100%;
    padding: 1.5rem;
    text-align: center;
    color: white;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  }

  .card-content h3 {
    background-color: rgba(0, 0, 0, 0.5);
    letter-spacing: 0.1em;
  }
</style>
